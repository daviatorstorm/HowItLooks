<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HowItLooks.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <CollectionView ItemsSource="{Binding Enemies}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label 
                                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                                Text="{Binding Name}" FontSize="18" TextColor="Black" Margin="5"
                                HorizontalTextAlignment="Center"
                                BindingContext="{Binding}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="NameLabel_Clicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <Label 
                                Grid.Row="1" Grid.Column="0"
                                Text="{Binding Initiative}" FontSize="14" TextColor="Gray"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                BindingContext="{Binding}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="InitiativeLabel_Clicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <Button 
                                Grid.Row="1" Grid.Column="1"
                                x:Name="IncreaseHP"
                                Text="↑" Clicked="IncreaseHP_Clicked" BindingContext="{Binding}"
                                BackgroundColor="Green"
                                HorizontalOptions="Start"
                                Style="{StaticResource EnemyBtn}" />
                            <Label 
                                Grid.Row="1" Grid.Column="2"
                                Text="{Binding HitPointsLabel, Mode=TwoWay}" FontSize="14" TextColor="Gray"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                BindingContext="{Binding}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="HPLabel_Clicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <Button 
                                Grid.Row="1" Grid.Column="3"
                                x:Name="DecreaseHP"
                                Text="↓" Clicked="DecreaseHP_Clicked" BindingContext="{Binding}"
                                HorizontalOptions="End"
                                BackgroundColor="Red"
                                Style="{StaticResource EnemyBtn}" />

                            <Button 
                                Grid.Row="1" Grid.Column="4"
                                x:Name="RemoveEnemy"
                                Text="Rem" BindingContext="{Binding}"
                                HorizontalOptions="End"
                                BackgroundColor="Red"
                                Clicked="RemoveEnemy_Clicked"
                                Style="{StaticResource EnemyBtn}" />

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button 
                x:Name="AddListItem"
                Text="Додати" 
                Clicked="AddEnemyClicked"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
