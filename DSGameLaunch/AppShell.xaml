<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DSGameLaunch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DSGameLaunch"
    Shell.FlyoutBehavior="Flyout"
    Title="DS Game Launch">

    <FlyoutItem Title="Основна"
                Icon="campaign.png">
        <Tab Title="Основна">
            <ShellContent
                Title="Основна"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Глобальні"
                Icon="earth.png">
        <Tab Title="Глобальні">
            <ShellContent
                Title="Глобальні"
                ContentTemplate="{DataTemplate local:Globals}"
                Route="Globals" />
        </Tab>
    </FlyoutItem>
</Shell>
